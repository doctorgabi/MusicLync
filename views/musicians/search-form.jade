form#searchForm.hidden(action='/musicians', method='get')
  fieldset
    legend Search Musicians
    .row
      .form
        .row
          .small-12.columns
            mixin field(12, 'text', 'location', 'Location', null, null, false, 'searchLocation')
        .row
          .small-8.columns.small-offset-2.columns
            .button#searchMusicianByLocation.small.radius.expand Search by Location
          .small-2.columns
        .row
          .small-8.columns.small-offset-2.columns
            .button#searchMusicianByAttributes.small.radius.expand Search by Attributes
          .small-2.columns
        .row
          .small-8.columns.small-offset-2.columns
            .button#cancelSearchMusician.small.radius.expand Cancel
          .small-2.columns