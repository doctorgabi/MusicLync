block content
  #musiciansIndexPage
    .row
      .small-2.columns#sideNav
        a(href="#")
          .button.small.radius.expand#createProfileButton Create my profile
          //-.button.small.radius.expand#createProfileButton(class=user ? 'hidden' : '') Create my profile
        a(href="#")
          .button.small.radius.expand#editProfileButton Edit my profile
          //- .button.small.radius.expand#editProfileButton(class=user ? '' : 'hidden') Edit my profile
        a(href="#")
          .button.small.radius.expand#searchMusiciansButton Search Musicians
